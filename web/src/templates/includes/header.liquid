<header class="header fix top fill-x bg-tan bb z2">
  <div class="header__inner df aic jcb ph10 xs:ph20 pv10">
    <a
      class="header__logo db"
      href="
        {% if landingPageHeader %}
        #intro
        {% else %}
        /
        {% endif %}
      "
      aria-label="How to Make Space"
      data-router-disabled
    >
      {% include logo-blue %}
    </a>
    <div class="df aic">
      {% if landingPageHeader %}
        <div class="df aic m:dn pr10 xs:pr15 z2">
          {% include burger %}
        </div>
        <div class="z1">
          {% include mobile-nav %}
        </div>
        <div class="dn m:db pt5">
          {% include nav %}
        </div>
      {% endif %}

      <div class="pv10 pl10 xs:pl15 m:pl20 bl">
        <a
          class="header__mit db"
          href="https://mit.edu"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="MIT"
        >
          {% include mk-logo, primary: '#3D5262', secondary: '#528486' %}
        </a>
      </div>
    </div>
  </div>
</header>
