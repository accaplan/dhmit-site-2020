<section id="people" class="pt25 mb35 s:mb60 m:mb80 l:mb115">
  <div class="pl20 m:pl40 l:pl80 pb30 m:pb50">
    {% include section-title, title: "People" %}
  </div>
  <div class="m:df">
    <div class="m:w50">
      <div class="pl20 m:pl40 l:pl80 pr20 m:pr0 m:pr25 l:pr40 xl:pr80 mb50 m:mb110">
        <h3 class="mono f16 l:f18 f138 mb15 m:mb30">Faculty</h3>
        <ul>
          {% for person in people.Faculty %}
            <li class="bb pt15 pb10">
                <h4 class="f18 l:f22 lh113 ls01em mb5">
                    {% if person.link %}
                        <a
                          class="tdu"
                          href="{{ person.link }}"
                          target="_blank"
                          rel="noopener noreferrer"
                        > {{ person.name }}</a>
                    {% else %}
                    {{ person.name }}
                    {% endif %}
                </h4>
              <p class="f16 l:f18 lh138 ls01em l:ls02em">{{ person.title }}</p>
            </li>
          {% endfor %}
        </ul>
      </div>
      <div class="texture--3 dn m:db">
        {% include texture %}
      </div>
    </div>
    <div class="m:w50">
      <div class="pl25 pr20 m:pr40 l:pr80 mb30 m:mb65">
        <h3 class="mono f16 l:f18 f138 mb20 m:mb30">Student</h3>
        <ul class="f16 lh1625 ls01em">
          {% for person in people.students %}
            <li class="dib">{{ person.name }}{% unless forloop.last %},{% endunless %}</li>
          {% endfor %}
        </ul>
      </div>
      <div class="pl25 pr20 m:pr40 l:pr80 mb30 m:mb65">
        <h3 class="mono f16 l:f18 f138 mb20 m:mb30">Program Alumni</h3>
        <ul class="f16 lh1625 ls01em">

          {% for person in people.formerFaculty %} 
              <li class="f16 lh1625 ls01em mb5">
              <h4 class="db s:di s:mr5">
                {% if person.link %}
                    <a
                      class="tdu"
                      href="{{ person.link }}"
                      target="_blank"
                      rel="noopener noreferrer"
                    > {{ person.name }}</a>
                {% else %}
                {{ person.name }}
                {% endif %}
              </h4>
              <p class="db s:di o80 i lh150">{{ person.title }}</p>
              <li>
          {% endfor %}
          {% for person in people.formerUrops %}
            <li class="dib">{{ person.name }}{% unless forloop.last %},{% endunless %}</li>
        {% endfor %}
        <p class="s:di o80 i lh150">Student</p>

        </ul>
      </div>
      <div class="pl25 pr20 m:pr40 l:pr80">
        <h3 class="mono f16 l:f18 f138 mb20 m:mb30">Advisory Committee</h3>
        <ul>
          {% for person in people.steeringCommittee %}
            <li class="f16 lh1625 ls01em mb5">
              <h4 class="db s:di s:mr5">
                {% if person.link %}
                    <a
                      class="tdu"
                      href="{{ person.link }}"
                      target="_blank"
                      rel="noopener noreferrer"
                    > {{ person.name }}</a>
                {% else %}
                {{ person.name }}
                {% endif %}
              </h4>
              <p class="db s:di o80 i lh150">{{ person.title }}</p>
            </li>
          {% endfor %}
        </ul>
      </div>

      <div class="texture--3 db m:dn mt50">
        {% include texture %}
      </div>
    </div>
  </div>
</section>
