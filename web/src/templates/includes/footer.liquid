<footer class="footer bg-blue c-tan ph20 m:ph40 l:ph80 pt30 pb70">
  <div class="df aic jcb">
    <a 
      class="footer__logo"
      href="#intro"
      data-router-disabled
      aria-label="How to Make Space"
    >
      {% include mark-tan %}
    </a>
    <a
      class="footer__mit"
      href="https://mit.edu"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="MIT"
    >
      {% include mk-logo, primary: '#FBF7EB', secondary: '#BC8540' %}
    </a>
  </div>
  <div class="footer__content df">
    <div class="w40 xl:w50 dn l:db"></div>
    <div class="x l:w60 xl:w50 pt105 l:pt0 f16 lh1437 ls02em pt10">
      <div class="x">
        <p>{{ footer.addressLine1 }}</p>
        <p class="db s:dib">{{ footer.addressLine2 }}</p><span class="dn s:di">,</span>
        <p class="db s:dib mb20">{{ footer.addressLine3 }}</p>
        <ul class="pb100 mb20 bb bc-tan m:mr160">
          <li class="mr40 mb25 db s:dib"><p>{{ footer.phone }}</p></li>
          <li class="mr40 dib">
            <a class="tdu" href="mailto:{{ footer.email }}">Email</a>
          </li>
          <li class="dib">
            <a
              class="tdu"
              href="https://twitter.com/{{ footer.twitterHandle }}"
              target="_blank"
              rel="noopener noreferrer"
            >Twitter</a>
          </li>
        </ul>
        <div class="footer__funded-by w50 s:w100">
            Initiated by
            <a href="https://www.idlehours.co/">
                {% include lazy-image,
                  image: footer.mellonLogo,
                  containerCx: 'r--4x3',
                  imgCx: 'x y o-contain',
                  width: 500,
                  padding: false
                %}
            </a>
        </div>
      </div>
    </div>
  </div>
</footer>
